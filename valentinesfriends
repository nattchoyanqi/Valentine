<body>

    <div class="container">
        <div id="content">
            <h1>Will you be my Valentine? üåπ</h1>
            <p>Pleeeeaseeee Pretty pleaseeeee</p>
            <img style="width:325px" src="https://www.pbfingers.com/wp-content/uploads/2012/11/puss-in-boots_thumb.jpg" alt="big eyes cat">
            <div class="buttons">
                <button id="yesBtn" onclick="celebrate()">YES!</button>
                <button id="noBtn" onmouseover="moveButton()">No</button>
            </div>
        </div>
    </div>

    <script>
        // Floating hearts background
        function createHeart() {
            const heart = document.createElement('div');
            heart.classList.add('heart');
            heart.innerHTML = 'ü§ç'; // White hearts for the blue background
            heart.style.left = Math.random() * 100 + 'vw';
            heart.style.animationDuration = (Math.random() * 3 + 2) + 's';
            document.body.appendChild(heart);

            setTimeout(() => {
                heart.remove();
            }, 5000);
        }
        setInterval(createHeart, 300);

        // Make the "No" button run away
        function moveButton() {
            const btn = document.getElementById('noBtn');
            const x = Math.random() * (window.innerWidth - btn.offsetWidth);
            const y = Math.random() * (window.innerHeight - btn.offsetHeight);
            
            btn.style.position = 'absolute';
            btn.style.left = x + 'px';
            btn.style.top = y + 'px';
        }

        // The "YES" sequence
        function celebrate() {
            const content = document.getElementById('content');
            content.innerHTML = `
                <h1 style="color: #ff4081;">YAY! See you then! ‚ù§Ô∏è</h1>
                <img src="https://media.tenor.com/HSxxt1scQXYAAAAM/cat-hugs.gif" alt="Cat with flowers" class="cat-img">
                <p style="margin-top: 15px;">I'm so excited! ü•∞</p>
            `;
            
            // Optional: Increase heart frequency after saying yes
            setInterval(createHeart, 100);
        }
    </script>
